<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">{{title}}</h1>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Salary</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Salary</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {{#each orders}}
                        <tr>
                            <td>{{this.id}}</td>
<!--                            <td>{{this.method}}</td>-->
<!--                            <td>{{this.shipping}}</td>-->
                            <td><a href="{{this.id}}" class="bt">Edit</a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



